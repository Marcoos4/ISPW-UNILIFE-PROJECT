<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.CourseDetailFXController">
    <top>
        <VBox>
            <VBox style="-fx-padding: 20 20 0 20;">
                <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                    <padding><Insets left="25.0" right="25.0" /></padding>
                    <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                            <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                            <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                            <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                        </HBox>

                        <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Course">
                            <font><Font size="16.0" /></font>
                        </Label>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                            <Button fx:id="btnLogout" onAction="#onLogout" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Logout" />
                            <Button fx:id="btnProfile" onAction="#onProfile" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Profile" textFill="white" />
                            <Button fx:id="btnHome" onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Home" textFill="white" />
                        </HBox>
                    </children>
                </StackPane>
            </VBox>
            <VBox style="-fx-background-color: #ff9933; -fx-padding: 20 40; -fx-background-radius: 20 20 20 20;">
                <VBox.margin><Insets top="-10.0" /></VBox.margin>
                <padding><Insets top="30.0" /></padding>
                <Label fx:id="lblCourseName" text="Course Name" textFill="BLACK"><font><Font name="System Bold" size="24.0" /></font></Label>
            </VBox>
        </VBox>
    </top>
    <center>
        <HBox spacing="30.0" style="-fx-padding: 30;">
            <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Description"><font><Font name="System Bold" size="20.0" /></font></Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="â­ 4,5/5" textFill="#e6ae15"><font><Font name="System Bold" size="16.0" /></font></Label>
                    </HBox>
                    <Label fx:id="lblDescription" style="-fx-padding: 10 0 0 0;" text="Loading description..." wrapText="true" />
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" VBox.vgrow="ALWAYS">
                    <Label text="Info"><font><Font name="System Bold" size="20.0" /></font></Label>
                    <VBox spacing="5.0" style="-fx-padding: 10 0;">
                        <HBox spacing="5">
                            <Label text="Duration:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblDuration" text="" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="Fees:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblFees" text="" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="Language:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblLanguage" text="" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="Course Type:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblCourseType" text="" />
                        </HBox>
                    </VBox>
                </VBox>
                <Button fx:id="btnBack" onAction="#onBack" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-background-radius: 8;" text="Back to Search" />
            </VBox>

            <VBox prefWidth="350.0" spacing="20.0">
                <Button fx:id="btnFav" onAction="#onAddToFav" maxWidth="Infinity" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-background-radius: 8;" text="Add to Favourites" />

                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" VBox.vgrow="ALWAYS">
                    <Label text="University Info"><font><Font name="System Bold" size="20.0" /></font></Label>
                    <VBox spacing="5.0" style="-fx-padding: 10 0;">
                        <HBox spacing="5">
                            <Label text="Name:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblUniName" text="" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="Location:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblUniLocation" text="" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="Estimated Living Cost:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblUniLivingCost" text="" />
                        </HBox>
                        <HBox spacing="5">
                            <Label text="Ranking:" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblUniRanking" text="" />
                        </HBox>
                    </VBox>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <Button fx:id="btnReviews" onAction="#onGoToReviews" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-background-radius: 8;" text="Go to Course Reviews" />
                    <Button fx:id="btnApply" onAction="#onApply" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-background-radius: 8;" text="Application" />
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>