<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.LessonDetailsFXController">
    <top>
        <VBox style="-fx-padding: 20 20 0 20;">
            <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                <padding><Insets left="25.0" right="25.0" /></padding>
                <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                        <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                        <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                        <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                    </HBox>

                    <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Add Lesson">
                        <font><Font size="16.0" /></font>
                    </Label>

                    <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                        <Button fx:id="btnLogout" onAction="#onLogout" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Logout"><font><Font size="14.0" /></font></Button>
                        <Button fx:id="btnProfile" onAction="#onProfile" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Profile" textFill="white"><font><Font size="14.0" /></font></Button>
                        <Button fx:id="btnHome" onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Home" textFill="white"><font><Font size="14.0" /></font></Button>
                    </HBox>
                </children>
            </StackPane>
        </VBox>
    </top>

    <center>
        <VBox maxWidth="800.0" maxHeight="550.0" spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5; -fx-padding: 40;" alignment="TOP_LEFT">
            <children>
                <Label text="Add New Lesson">
                    <font><Font name="System Bold" size="22.0" /></font>
                </Label>
                <VBox spacing="15.0">
                    <HBox spacing="20.0" alignment="CENTER_LEFT">
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label text="Subject"><font><Font name="System Bold" size="14.0" /></font></Label>
                            <TextField fx:id="txtSubject" promptText="Enter subject" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5; -fx-padding: 10;" />
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label text="Duration (hours)"><font><Font name="System Bold" size="14.0" /></font></Label>
                            <ComboBox fx:id="cmbDuration" maxWidth="Infinity" promptText="Select duration" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;" />
                        </VBox>
                    </HBox>
                    <HBox spacing="20.0" alignment="CENTER_LEFT">
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label text="Date"><font><Font name="System Bold" size="14.0" /></font></Label>
                            <DatePicker fx:id="datePicker" maxWidth="Infinity" promptText="Select date" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;" />
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label text="Start Time"><font><Font name="System Bold" size="14.0" /></font></Label>
                            <ComboBox fx:id="cmbStartTime" maxWidth="Infinity" promptText="Select time" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5;" />
                        </VBox>
                    </HBox>
                    <VBox spacing="5.0">
                        <Label text="Price per Hour"><font><Font name="System Bold" size="14.0" /></font></Label>
                        <TextField fx:id="txtPrice" promptText="Enter price" style="-fx-background-color: #f0f0f0; -fx-background-radius: 5; -fx-padding: 10;" />
                    </VBox>
                </VBox>
                <Label fx:id="lblError" textFill="red" visible="false" />
                <Region VBox.vgrow="ALWAYS" />
                <HBox alignment="BOTTOM_CENTER" spacing="20.0">
                    <Button fx:id="btnBack" onAction="#onBack" prefWidth="120.0" style="-fx-background-color: #666666; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Back" prefHeight="40" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnConfirm" onAction="#onConfirmLesson" prefWidth="180.0" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Add Lesson" prefHeight="40" />
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="30.0" bottom="30.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>