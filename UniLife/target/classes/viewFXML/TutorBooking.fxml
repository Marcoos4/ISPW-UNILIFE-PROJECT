<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.TutorBookingFXController">
    <top>
        <VBox>
            <VBox style="-fx-padding: 20 20 0 20; -fx-background-color: #f5f5f5;">
                <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                    <padding><Insets left="25.0" right="25.0" /></padding>
                    <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                            <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                            <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                            <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                        </HBox>

                        <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Tutor Booking">
                            <font><Font size="16.0" /></font>
                        </Label>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                            <Button fx:id="btnLogout" onAction="#onLogout" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Logout"><font><Font size="14.0" /></font></Button>
                            <Button fx:id="btnProfile" onAction="#onProfile" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Profile" textFill="white"><font><Font size="14.0" /></font></Button>
                            <Button fx:id="btnHome" onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Home" textFill="white"><font><Font size="14.0" /></font></Button>
                        </HBox>
                    </children>
                </StackPane>
            </VBox>

            <VBox prefHeight="89.0" prefWidth="959.0" style="-fx-background-color: #ff9933; -fx-padding: 20 40; -fx-background-radius: 20 20 20 20;">
                <VBox.margin><Insets top="-10.0" /></VBox.margin>
                <padding><Insets top="30.0" /></padding>
                <Label fx:id="lblLessonTime" text="-- | -- | --" textFill="#222"><font><Font size="14.0" /></font></Label>
                <Label fx:id="lblLessonSubject" text="Lesson Subject" textFill="BLACK"><font><Font name="System Bold" size="26.0" /></font></Label>
            </VBox>
        </VBox>
    </top>
    <center>
        <HBox spacing="30.0" style="-fx-padding: 30;">
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 25; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                <Label text="Tutor Description"><font><Font name="System Bold" size="20.0" /></font></Label>
                <Label fx:id="lblTutorDescription" style="-fx-padding: 10; -fx-background-color: #f9f9f9;" text="Tutor description will appear here..." wrapText="true" />
                <Label text="Tutor Info"><font><Font name="System Bold" size="20.0" /></font></Label>
                <Label fx:id="lblTutorInfo" style="-fx-line-spacing: 5;" text="Tutor info will appear here..." wrapText="true" />
                <Region VBox.vgrow="ALWAYS" />
                <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
                    <Button fx:id="btnBackToTutor" onAction="#onBackToTutor" prefHeight="40" style="-fx-background-color: #666666; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Back to Search" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnConferma" onAction="#onConferma" prefHeight="40" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Confirm Booking" />
                </HBox>
            </VBox>
            <VBox alignment="TOP_CENTER" prefWidth="280.0" spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-padding: 20; -fx-background-radius: 5;">
                <ImageView fx:id="imgTutor" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-color: gray;" />
                <Label fx:id="lblTutorName" text="Tutor Name"><font><Font name="System Bold" size="18.0" /></font></Label>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Rating:" />
                    <Label fx:id="lblTutorRating" text="--/5"><font><Font name="System Bold" size="16.0" /></font></Label>
                </HBox>
                <Button fx:id="btnLeaveReview" onAction="#onLeaveReview" maxWidth="Infinity" prefHeight="35" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Leave Review" />
            </VBox>
        </HBox>
    </center>
</BorderPane>