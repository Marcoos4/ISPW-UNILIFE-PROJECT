<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.SearchCourseFXController">
    <top>
        <VBox style="-fx-padding: 20 20 0 20;">
            <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                <padding><Insets left="25.0" right="25.0" /></padding>
                <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                        <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                        <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                        <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                    </HBox>

                    <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Course">
                        <font><Font size="16.0" /></font>
                    </Label>

                    <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                        <Button fx:id="btnLogout" onAction="#onLogout" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Logout"><font><Font size="14.0" /></font></Button>
                        <Button fx:id="btnProfile" onAction="#onProfile" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Profile" textFill="white"><font><Font size="14.0" /></font></Button>
                        <Button fx:id="btnHome" onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Home" textFill="white"><font><Font size="14.0" /></font></Button>
                    </HBox>
                </children>
            </StackPane>

            <HBox alignment="CENTER" prefHeight="80.0" style="-fx-padding: 10;">
                <TextField fx:id="txtSearch" prefHeight="45.0" prefWidth="400.0" promptText="Find courses, universities, ..." style="-fx-background-radius: 25 0 0 25; -fx-background-color: #f5f5f5; -fx-padding: 0 20;">
                    <font><Font size="14.0" /></font>
                </TextField>
                <Button fx:id="btnSearch" onAction="#onSearch" prefHeight="45.0" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-background-radius: 0 25 25 0; -fx-padding: 0 30;" text="Search">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox prefWidth="250.0" spacing="15.0" style="-fx-padding: 20;">
            <Label text="Filters"><font><Font name="System Bold" size="22.0" /></font></Label>
            <Separator />
            <ComboBox fx:id="cmbUniversityName" maxWidth="Infinity" promptText="University Name" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
            <ComboBox fx:id="cmbLocation" maxWidth="Infinity" promptText="University Location" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
            <ComboBox fx:id="cmbCourseType" maxWidth="Infinity" promptText="Course Type" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
            <ComboBox fx:id="cmbDuration" maxWidth="Infinity" promptText="Duration Range" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
            <ComboBox fx:id="cmbRanking" maxWidth="Infinity" promptText="Ranking Range" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
            <ComboBox fx:id="cmbLanguage" maxWidth="Infinity" promptText="Language" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
            <Button fx:id="btnApplyFilters" onAction="#onApplyFilters" maxWidth="Infinity" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Apply Filters">
                <font><Font size="14.0" /></font>
            </Button>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="courseListContainer" spacing="20.0" style="-fx-padding: 10 30; -fx-background-color: white;">
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>