<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.RegisterFXController">
    <top>
        <VBox style="-fx-padding: 20 20 0 20;">
            <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                <padding><Insets left="25.0" right="25.0" /></padding>
                <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                        <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                        <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                        <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                    </HBox>

                    <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Register">
                        <font><Font size="16.0" /></font>
                    </Label>

                    <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                        <Button fx:id="btnHome" onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-padding: 8 15; -fx-font-weight: bold;" text="Home" textFill="white"><font><Font size="16.0" /></font></Button>
                    </HBox>
                </children>
            </StackPane>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" maxWidth="400.0" spacing="10.0">
            <padding><Insets top="20.0" bottom="20.0" /></padding>
            <VBox spacing="2.0" alignment="CENTER_LEFT">
                <Label text="Username"><font><Font name="System Bold" size="16.0" /></font></Label>
                <TextField fx:id="txtUsername" promptText="Enter username" style="-fx-background-radius: 5; -fx-background-color: #f0f0f0; -fx-padding: 8;">
                    <font><Font size="14.0" /></font>
                </TextField>
            </VBox>
            <VBox spacing="2.0" alignment="CENTER_LEFT">
                <Label text="Password"><font><Font name="System Bold" size="16.0" /></font></Label>
                <PasswordField fx:id="txtPassword" style="-fx-background-radius: 5; -fx-background-color: #f0f0f0; -fx-padding: 8;">
                    <font><Font size="14.0" /></font>
                </PasswordField>
            </VBox>
            <VBox spacing="2.0" alignment="CENTER_LEFT">
                <Label text="Name"><font><Font name="System Bold" size="16.0" /></font></Label>
                <TextField fx:id="txtName" style="-fx-background-radius: 5; -fx-background-color: #f0f0f0; -fx-padding: 8;">
                    <font><Font size="14.0" /></font>
                </TextField>
            </VBox>
            <VBox spacing="2.0" alignment="CENTER_LEFT">
                <Label text="Surname"><font><Font name="System Bold" size="16.0" /></font></Label>
                <TextField fx:id="txtSurname" style="-fx-background-radius: 5; -fx-background-color: #f0f0f0; -fx-padding: 8;">
                    <font><Font size="14.0" /></font>
                </TextField>
            </VBox>
            <VBox spacing="2.0" alignment="CENTER_LEFT">
                <Label text="Role"><font><Font name="System Bold" size="16.0" /></font></Label>
                <ComboBox fx:id="cmbRole" maxWidth="Infinity" promptText="Select role" style="-fx-background-radius: 5; -fx-background-color: #f0f0f0; -fx-padding: 8;" />
            </VBox>
            <VBox spacing="2.0" alignment="CENTER_LEFT">
                <Label fx:id="lblUniversity" managed="false" visible="false" text="University"><font><Font name="System Bold" size="16.0" /></font></Label>
                <ComboBox fx:id="cmbUniversity" managed="false" visible="false" maxWidth="Infinity" promptText="Select University" style="-fx-background-radius: 5; -fx-background-color: #f0f0f0; -fx-padding: 8;" />
            </VBox>

            <Label fx:id="lblError" textFill="red" visible="false" />
            <Region prefHeight="10.0" />

            <Button fx:id="btnRegister" maxWidth="Infinity" onAction="#onRegister" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Register">
                <font><Font size="16.0" /></font>
                <effect><DropShadow color="#00000040" offsetY="3.0" /></effect>
            </Button>
            <Button fx:id="btnBackToLogin" maxWidth="Infinity" onAction="#onBackToLogin" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Back to Login">
                <font><Font size="16.0" /></font>
                <effect><DropShadow color="#00000040" offsetY="3.0" /></effect>
            </Button>
        </VBox>
    </center>
</BorderPane>