<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.CreateCourseFXController">
    <top>
        <VBox>
            <VBox style="-fx-padding: 20 20 0 20;">
                <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                    <padding><Insets left="25.0" right="25.0" /></padding>
                    <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                            <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                            <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                            <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                        </HBox>

                        <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Employee">
                            <font><Font size="16.0" /></font>
                        </Label>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                            <Button fx:id="btnLogout" onAction="#onLogout" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Logout" />
                            <Button fx:id="btnProfile" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Profile" textFill="white" />
                            <Button fx:id="btnHome" onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold;" text="Home" textFill="white" />
                        </HBox>
                    </children>
                </StackPane>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-padding: 30;">
            <Label text="Create Course"><font><Font name="System Bold" size="22.0" /></font></Label>

            <VBox spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5; -fx-padding: 30;" VBox.vgrow="ALWAYS">

                <HBox spacing="30.0" alignment="CENTER_LEFT">
                    <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                        <Label text="Title:" minWidth="60.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                        <TextField fx:id="txtTitle" style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                        <Label text="Tags (comma sep):" minWidth="130.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                        <TextField fx:id="txtTags" promptText="e.g. MATH, SCIENCE" style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Language:" minWidth="80.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <TextField fx:id="txtLanguage" style="-fx-background-color: #f5f5f5;" prefWidth="150.0"/>

                    <Label text="Duration (mo):" minWidth="110.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <TextField fx:id="txtDuration" style="-fx-background-color: #f5f5f5;" prefWidth="60.0"/>

                    <Label text="Fees (â‚¬):" minWidth="70.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <TextField fx:id="txtFees" promptText="0.00" style="-fx-background-color: #f5f5f5;" prefWidth="90.0"/>

                    <Label text="Course Type:" minWidth="100.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <ComboBox fx:id="cmbCourseType" prefWidth="150.0" promptText="Select Type" style="-fx-background-color: #f5f5f5;" />
                </HBox>

                <HBox alignment="TOP_LEFT" spacing="10.0" prefHeight="100.0">
                    <Label text="Description:" minWidth="80.0"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <TextArea fx:id="txtDescription" style="-fx-background-color: #f5f5f5;" wrapText="true" HBox.hgrow="ALWAYS"/>
                </HBox>

                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <Label text="Admission Requirements:" underline="true"><font><Font name="System Bold" size="16.0" /></font></Label>
                    <HBox spacing="15.0">
                        <Button fx:id="btnAddTextReq" onAction="#onAddTextReq" style="-fx-background-color: #3b6e8a; -fx-text-fill: white;" text="+ Add Text Requirement" />
                        <Button fx:id="btnAddDocReq" onAction="#onAddDocReq" style="-fx-background-color: #3b6e8a; -fx-text-fill: white;" text="+ Add Document Requirement" />
                    </HBox>

                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: #e0e0e0;" VBox.vgrow="ALWAYS">
                        <content>
                            <VBox fx:id="reqContainer" spacing="10.0" style="-fx-padding: 10;">
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Button fx:id="btnCancel" onAction="#onCancel" style="-fx-background-color: #999; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Cancel" prefWidth="100.0" prefHeight="35.0"/>
                    <Button fx:id="btnConfirm" onAction="#onConfirm" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Confirm &amp; Create" prefWidth="150.0" prefHeight="35.0"/>
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>