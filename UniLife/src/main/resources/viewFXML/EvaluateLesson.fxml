<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.ispw.unilife.graphicontroller.EvaluateLessonFXController">

    <top>
        <VBox style="-fx-padding: 20 20 0 20;">
            <StackPane prefHeight="70.0" style="-fx-background-color: #1e1e1e; -fx-background-radius: 20;">
                <padding><Insets left="25.0" right="25.0" /></padding>
                <effect><DropShadow color="#00000040" offsetY="5.0" /></effect>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="5.0" StackPane.alignment="CENTER_LEFT">
                        <SVGPath content="M3 5a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm2 0h14v14H5V5zm6 4H9v6h2v-6zm4 0h-2v6h2v-6z" fill="#ff9933" scaleX="1.3" scaleY="1.3" />
                        <Label text="Uni" textFill="WHITE"><font><Font name="System Bold" size="26.0" /></font></Label>
                        <Label text="Life" textFill="#ff9933"><font><Font name="System Bold" size="26.0" /></font></Label>
                    </HBox>

                    <Label style="-fx-background-color: #3b6e8a; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 25;" text="Lesson Review">
                        <font><Font size="16.0" /></font>
                    </Label>

                    <HBox alignment="CENTER_RIGHT" spacing="15.0" StackPane.alignment="CENTER_RIGHT">
                        <Button onAction="#onLogout" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Logout">
                            <font><Font size="14.0" /></font>
                        </Button>
                        <Button onAction="#onHome" style="-fx-background-color: #ff9933; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" text="Home" textFill="white">
                            <font><Font size="14.0" /></font>
                        </Button>
                    </HBox>
                </children>
            </StackPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="30.0" style="-fx-padding: 40 100;">

            <HBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <VBox spacing="10.0">
                    <Label text="Tutor" textFill="#666666"><font><Font size="14.0" /></font></Label>
                    <Label fx:id="lblTutorName" text="--"><font><Font name="System Bold" size="24.0" /></font></Label>
                </VBox>
                <Separator orientation="VERTICAL" />
                <VBox spacing="10.0">
                    <Label text="Subject" textFill="#666666"><font><Font size="14.0" /></font></Label>
                    <Label fx:id="lblSubject" text="--"><font><Font name="System Bold" size="24.0" /></font></Label>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="CENTER_RIGHT" spacing="5.0">
                    <Label text="Status" textFill="#999999" />
                    <Label fx:id="lblStatus" text="PENDING" textFill="#ff9933" style="-fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <Label text="Lesson Details">
                <font><Font name="System Bold" size="20.0" /></font>
            </Label>

            <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">

                <HBox spacing="50.0">
                    <VBox spacing="5.0">
                        <Label text="Date &amp; Start Time" textFill="#3b6e8a" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblStartTime" text="--/--/---- --:--" style="-fx-font-size: 16px;"/>
                    </VBox>

                    <VBox spacing="5.0">
                        <Label text="End Time" textFill="#3b6e8a" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblEndTime" text="--:--" style="-fx-font-size: 16px;"/>
                    </VBox>

                    <VBox spacing="5.0">
                        <Label text="Duration" textFill="#3b6e8a" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblDuration" text="-- hours" style="-fx-font-size: 16px;"/>
                    </VBox>
                </HBox>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-padding: 10 0 0 0;">
                <Button onAction="#onBack" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Back" />

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#onReject" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Reject Lesson" />

                <Button onAction="#onAccept" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #ff9933; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Approve Lesson" />
            </HBox>

        </VBox>
    </center>
</BorderPane>